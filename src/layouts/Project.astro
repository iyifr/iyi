---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

type Props = CollectionEntry<'projects'>['data'];

const { title, description, stack, images, url } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description}  />
	</head>


	<body>
		<Header />
		<main class="lg:max-w-5xl mx-auto lg:px-0 px-6" id="project">
            <h2 class="font-bold !mt-4">{title}</h2>
            <p class="mt-4 font-light lg:w-[80%]">{description}</p>
			<p>Live app link - <a href={url} target="_blank">Karu App.</a></p>
		    <slot />
		</main>
		<Footer />
	</body>
</html>
