---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import Featured from '../components/Featured.vue';
import Projects from '../components/Projects.vue';

---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="max-w-5xl mx-auto lg:p-0 p-6">
			<h2 class="my-4 lg:text-4xl text-2xl font-bold text-fuchsia-200">Amor fati.</h2>
			<p>Programming a lot, building a lot, writing sometimes.</p>
			<p>My favorite book so far is <b class="mx-0.5">Wealth of Nations</b> by Adam Smith.</p>
			<p>On my blog you'll find stuff about projects I'm working on, time travel and frank ocean's music.</p>
			
		<a class="underline mr-4" href="https://twitter.com/iyifrr">Twitter</a> 
		<a class="underline" href="https://github.com/iyifr">Github</a>

		<h2 class="text-2xl font-bold mt-12 mb-0">Featured posts</h2>
		<Featured client:load/>

		<Projects client:load/>
		</main>

		<Footer />
	</body>
</html>

<style>
 h4 {
	text-align: left;
	margin-block: 14px;
 }
</style>
