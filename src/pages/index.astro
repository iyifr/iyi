---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import Featured from '../components/Featured.vue';
import Projects from '../components/Projects.vue';

---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="max-w-5xl mx-auto px-8 xl:p-0 lg:mt-8 text-balance">
			<h2 class="lg:my-8 my-4 lg:text-4xl text-3xl font-bold">Yo.</h2>

			<section class="md:mt-8 mt-4 flex flex-col md:gap-2 gap-4">
			<p>I'm iyimide.</p>
			<p>This is my web-log or <strong>blog</strong> for short.</p>
			<p>I'm a hobbyist / generalist working at the intersection of whatever my current interests are.</p>
			</section>

			<section class="my-12 lg:my-8 flex flex-col md:gap-2 gap-4">
			<p>I do a lot of <a href="https://www.youtube.com/watch?v=YyIQKBzIuBY&t=1647s" target="_blank">principled tinkering</a></p>
			<p>I try to make my beliefs work <a href="https://meltingasphalt.com/crony-beliefs/" target="_blank">hard</a>.</p>
			<p>I strive to do <a href="https://paulgraham.com/greatwork.html" target="_blank">great work</a></p>
			</section>

			<section class="flex flex-col gap-2"> 
				<p>Current hobby - time travel research</p>
				<p>You can find my frequently updated project list <a href="#projects">below</a></p>
			</section>

			<div class="mt-8"/>

		<Featured client:load/>
		<Projects client:load/>

		<p class="text-center text-sm">a lump of chemical scum dreaming of distant quasars.</p>
		</main>
		<Footer />
	</body>
</html>

<style>
 h4 {
	text-align: left;
	margin-block: 14px;
 }
</style>
